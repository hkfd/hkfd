{
  "packages": [
    "packages/*"
  ],
  "version": "1.7.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--ignore-engines"
      ]
    },
    "publish": {
      "commitHooks": false,
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  }
}
