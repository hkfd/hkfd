{
  "name": "hkfd",
  "private": true,
  "scripts": {
    "heroku-postbuild": "lerna run build:ssr --scope=angular"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,scss,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/*/functions"
    ],
    "nohoist": [
      "**/@angular*",
      "**/@angular*/**",
      "**/firebase-admin",
      "**/firebase-admin/**",
      "**/firebase-functions",
      "**/firebase-functions/**"
    ]
  },
  "devDependencies": {
    "husky": "^1.0.1",
    "lerna": "^3.1.4",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  }
}
