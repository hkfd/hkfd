{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "baseUrl": "src",
    "paths": {
      "shared": ["app/shared"],
      "shared/*": ["app/shared/*"],
      "environment": ["environments/environment"],
      "generic": ["app/shared/generic"],
      "prismic": ["app/shared/prismic"],
      "testing": ["testing"]
    }
  }
}
